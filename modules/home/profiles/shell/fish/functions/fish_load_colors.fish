function fish_load_colors --description 'Restore colors'
    set fish_color_autosuggestion brblack --italics
    set fish_color_command --bold
    set fish_color_param normal
    set fish_color_redirection normal
    set fish_color_comment brblack --italics
    set fish_color_error red
    set fish_color_escape brblack
    set fish_color_operator normal
    set fish_color_quote normal
    set fish_color_end normal
    set fish_color_search_match --reverse
    set fish_pager_color_completion normal
    set fish_pager_color_description normal
    set fish_pager_color_prefix --bold
    set fish_pager_color_progress normal
    set fish_color_normal normal
    set fish_color_user normal
    set fish_color_host normal
    set fish_color_valid_path --underline
    set fish_color_cwd normal
    set fish_color_cwd_root normal
    set fish_color_match normal
    set fish_color_selection --reverse
    set fish_color_cancel --reverse
    set fish_color_history_current normal
    set fish_color_status red
end
